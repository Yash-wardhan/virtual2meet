{
  "compilerOptions": {
    "target": "ES2020", // Adjust the target as needed
    "module": "NodeNext", // Set module to NodeNext
    "moduleResolution": "NodeNext", // Ensure moduleResolution matches
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
